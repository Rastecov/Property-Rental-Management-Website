@model IEnumerable<Property_Rental_Management_Web_Site.Models.Buildings>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text text-center text-success mb-4">Buildings Menu</h1>




<p>
    <a class="btn btn-success mb-4" asp-action="Create">Create New</a>
</p>
<table class="table table-striped ">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BuildingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BuildingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress.AddressId)
            </td>
            <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.BuildingId">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.BuildingId">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.BuildingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
