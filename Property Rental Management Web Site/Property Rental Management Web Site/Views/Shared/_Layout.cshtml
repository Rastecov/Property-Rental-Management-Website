<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Property_Rental_Management_Web_Site</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class=" navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Property_Rental_Management_Web_Site</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
               
                    @if (Authentification.userLogged != null && Authentification.userLogged.UserType == "Owner")
                    {
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <div class="dropdown">
                            <button class="btn alert-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Menu
                            </button>
                            <div class="dropdown-menu " aria-labelledby="dropdownMenuButton ">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Addresses" asp-action="Index">Addresses</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Apartments" asp-action="Index">Apartments</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Appointments" asp-action="Index">Appointments</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Buildings" asp-action="Index">Buildings</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Rentals" asp-action="Index">Rentals</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Messages" asp-action="Index">Messages</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Properties" asp-action="Index">Properties</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Schedules" asp-action="Index">Schedules</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tenants1" asp-action="Index">Tenants</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Employees" asp-action="Index">Employee</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users1" asp-action="Index">Users</a>
                            </div>
                        </div>
                    </div>
                    } 
                
                    @if (Authentification.userLogged != null && Authentification.userLogged.UserType == "Employee")
                    {
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <div class="dropdown">
                            <button class="btn alert-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Menu
                            </button>
                            <div class="dropdown-menu " aria-labelledby="dropdownMenuButton ">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Addresses" asp-action="Index">Addresses</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Apartments" asp-action="Index">Apartments</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Appointments" asp-action="Index">Appointments</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Buildings" asp-action="Index">Buildings</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Rentals" asp-action="Index">Rentals</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Schedules" asp-action="Index">Schedules</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tenants1" asp-action="Index">Tenants</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Messages" asp-action="Index">Messages</a>
                            </div>
                        </div>
                    </div>
                    }

                @if (Authentification.userLogged != null && Authentification.userLogged.UserType == "Tenants")
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <div class="dropdown">
                            <button class="btn alert-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Menu
                            </button>
                            <div class="dropdown-menu " aria-labelledby="dropdownMenuButton ">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Messages" asp-action="Index">Messages</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Appointments" asp-action="Create">Make Appointment</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Apartments" asp-action="Index">Buildings</a>
                            </div>
                        </div>
                    </div>
                }

                <div>
                    <form method="post" asp-controller="Home" asp-action="Logout">
                        <button class="btn btn-info">Logout</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Property_Rental_Management_Web_Site
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
